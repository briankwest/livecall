# Database Configuration
POSTGRES_DB=livecall
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
# Note: External PostgreSQL port is 5433, internal remains 5432

# Redis Configuration
REDIS_URL=redis://redis:6379
# Note: External Redis port is 6380, internal remains 6379

# Application Configuration
SECRET_KEY=your-very-secure-secret-key-here
ENVIRONMENT=development

# SignalWire Configuration
SIGNALWIRE_PROJECT_ID=your-signalwire-project-id
SIGNALWIRE_TOKEN=your-signalwire-token
SIGNALWIRE_SPACE_URL=your-space.signalwire.com

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Vector Database Configuration
# Using pgvector extension in PostgreSQL
VECTOR_DIMENSIONS=1536  # OpenAI ada-002 embeddings dimension

# Frontend Configuration (leave empty for relative URLs)
VITE_API_URL=
VITE_WS_URL=

# Public URL (set this when using ngrok or other tunneling service)
# Example: https://your-subdomain.ngrok.io
PUBLIC_URL=http://localhost:3030

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24